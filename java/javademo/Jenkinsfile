pipeline {
    agent any
    
    tools{
        maven "maven 3.6.3"
    }

    stages {
	
		stage("Checkout code"){
			steps
			{
				checkout([$class: 'GitSCM', branches: [[name: '*/java']], extensions: [], userRemoteConfigs: [[credentialsId: 'jenkins_assignment', url: 'https://git.nagarro.com/freshertraining2022/sonamjain02.git']]])
			}
        }
        stage('Clean') {
            steps {
                sh 'mvn -f java/javademo/pom.xml clean'
                echo 'Cleaning..'
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn -f java/javademo/pom.xml compile'
                echo 'Compiling..'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn -f java/javademo/pom.xml test'
                echo 'Testing..'
            }
        }
        stage('Packaging') {
            steps {
                sh 'mvn -f java/javademo/pom.xml package'
                echo 'Packageing..'
            }
        }
        stage('Install') {
            steps {
                sh 'mvn -f java/javademo/pom.xml install'
                echo 'Installing..'
            }
        }
        stage('Juint result') {
            steps{
                junit 'java/javademo/target/surefire-reports/*.xml'
                echo 'Deploying....'
            }
        }
        stage("Code Quality"){  
            steps{  
                  withSonarQubeEnv('SonarQube') {
                  sh 'mvn -f java/javademo/pom.xml sonar:sonar'                
            }            
        }         
    }
}
